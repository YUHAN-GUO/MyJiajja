<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wzm="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.base.gyh.baselib.widgets.ScrollViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </com.base.gyh.baselib.widgets.ScrollViewPager>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/color_EDEDED" />

    <com.base.gyh.baselib.widgets.TabMenu
        android:id="@+id/tabMenu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_gravity="bottom"
        android:background="@color/color_white"
        android:orientation="horizontal"
        android:textSize="@dimen/sp_12"
        wzm:icon_size="@dimen/dp_23"
        wzm:item_bg="@drawable/click_bg"
        wzm:text_color1="@color/color_black"
        wzm:text_color2="@color/color_FC6454"
        />

</LinearLayout>